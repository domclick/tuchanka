#!/bin/bash
# Проверка стабильности VirtualBox при reset на несколько виртуалок.
# safe bash
set -o errexit -o noclobber -o nounset -o pipefail -o xtrace

readonly root_dir="$(dirname "${BASH_SOURCE[0]}")/.."
. "${root_dir}/load_config.bash"

. "${lib_dir}/rollback.bash"
. "${lib_dir}/tick.bash"
. "${lib_dir}/power_on.bash"

rollback 'setup'
while true
do
	tick+
	power_on
	for hostname in "${vm_name[@]}"
	do
		VBoxManage controlvm "${hostname}" reset
	done
	sleep 1
done
