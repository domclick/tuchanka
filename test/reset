#!/bin/bash
# safe bash
set -o errexit -o noclobber -o nounset -o pipefail -o xtrace

readonly root_dir="$(dirname "${BASH_SOURCE[0]}")/.."
. "${root_dir}/load_config.bash"

. "${lib_dir}/rollback.bash"
. "${lib_dir}/tick.bash"
. "${lib_dir}/start_vms.bash"

rollback 'setup'
while true
do
	tick+
	start_vms
	for h in ${vm_name[@]}
	do
		VBoxManage controlvm "$h" reset
	done
	sleep 1
done
