#!/bin/bash
# safe bash
set -o errexit -o noclobber -o nounset -o pipefail

readonly setup_dir="$(dirname "${BASH_SOURCE[0]}")/../setup"

. "${setup_dir}/load_config.bash"
. "${setup_dir}/start_vms.bash"
. "${setup_dir}/soft_off.bash"
i=0
echo "i=$i $(date +'%FT%T')" |tee 'test.log'
while true
do
	start_vms
	soft_off
	let i=$i+1
	echo "i=$i $(date +'%FT%T')" |tee -a 'test.log'
done
